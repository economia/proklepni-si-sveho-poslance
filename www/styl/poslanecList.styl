&
    list-style-type none
    padding 0px
    margin 0px
    li
        position absolute
        border-bottom 2px solid white
        width 100%
        height 60px
        &.ods
            background lighten(PartyODS, 95%)
            &:hover
                background darken(@background, 5%)
        &.cssd
            background lighten(PartyCSSD, 91%)
            &:hover
                background darken(@background, 5%)
        &.kscm
            background lighten(PartyKSCM, 88%)
            &:hover
                background darken(@background, 5%)
        &.top
            background lighten(PartyTOP, 95%)
            &:hover
                background darken(@background, 5%)
        &.vv
            background lighten(PartyVV, 90%)
            &:hover
                background darken(@background, 5%)
        &:hover
            background #f0f0ff
            cursor pointer
        .name
        .party
            display block
            padding-left 65px
        .name
            font-size 1.2em
            color #222
            padding-top 9px
        img
            position absolute
            top 0px
            left 0px
        .party
            color #777
            font-style italic
            font-size 0.9em
            padding-top 2px
        .barchart
            position absolute
            top 0px
            right 25px
            width 60px
            top 10px
            height 50px
            barCount = 4
            .bar
                position absolute
                height @height
                margin-right 0px
                width ((@width / barCount) - @margin-right)
                left @width
                div
                    position absolute
                    width @width
                    bottom 0px
                &.interpelace
                    left ((@width + @margin-right) * 0)
                    div
                        background scaleQualitativeMedium[0]
                &.zakony
                    left ((@width + @margin-right) * 1)
                    div
                        background scaleQualitativeMedium[1]
                &.absence
                    left ((@width + @margin-right) * 2)
                    div
                        background scaleQualitativeMedium[2]
                &.vystoupeni
                    left ((@width + @margin-right) * 3)
                    div
                        background scaleQualitativeMedium[4]


