@import colors
body
    margin 0px
    font-family arial, sans-serif
    #wrap
        width 650px
        background #ffe
        .poslanecList
            list-style-type none
            padding 0px
            margin 0px
            li
                position relative
                height 60px
                .barchart
                    position absolute
                    top 0px
                    right 60px
                    width @right
                    height 50px
                    barCount = 4
                    .bar
                        position absolute
                        height @height
                        width (@width / barCount)
                        left @width
                        div
                            position absolute
                            width @width
                            bottom 0px
                        &.interpelace
                            left (@width * 0)
                            div
                                background scaleQualitativeMedium[0]
                        &.zakony
                            left (@width * 1)
                            div
                                background scaleQualitativeMedium[1]
                        &.absence
                            left (@width * 2)
                            div
                                background scaleQualitativeMedium[2]
                        &.nazor
                            left (@width * 3)
                            div
                                background scaleQualitativeMedium[3]


