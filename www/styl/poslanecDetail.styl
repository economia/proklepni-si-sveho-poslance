&
    position relative
    padding-left 20px
    .header
        float left
        width 100%
        margin-bottom 20px
        position relative
        img.foto
            float right
            margin-top 11px
        a.backButton
            position absolute
            top 14px
            left 0px
            display block
            width 38px
            height 38px
            border 2px solid #1d1d1d
            border-radius 50%
            background white
            &:hover
                background #eee
            img
                position absolute
                top -2px
                left -2px
        h2
        h3.party
        h4.supplemental
            margin-left 60px
        h2
            margin-top 10px
            margin-bottom 0px
        h3.party
            margin-top 0px
            font-size 1em
            font-weight normal
            color #777
            margin-bottom 0px
        h4.supplemental
            font-size 0.9em
            color #777
            font-style italic
            font-weight normal
            margin-top 4px
        em.calendarLegend
            font-size 0.9em
            line-height 1.1em
            width 380px
            display block

        div.calendar
            margin-top 31px
            width 380px
            height 125px
            margin-bottom 7px
            position relative
            .month
                position absolute
                width 30px
                height 30px
                border 1px solid #ddd
                z-index 1
                &:hover
                    z-index 2
                    border 2px solid #666
                    cursor pointer
                > div
                    width @width
                    height @height
                    position absolute
                    top 0px
                    left 0px
                    background red
            .yearLegend
                position absolute
                padding-top 7px
                font-style italic
                background #f4f4f4
                font-size 0.95em
                height (30px - @padding-top)
                &.y-0
                    text-align right
                    padding-right 10px
                    width (154px - @padding-right)
                    top 0px
                    left 0px
                &.y-1
                    text-align left
                    padding-left 10px
                    padding-top 6px
                    height (30px - @padding-top)
                    width (123px - @padding-left)
                    bottom 0px
                    right 7px
            .monthLegend
                float left
                width 31px
                position relative
                top -17px
                text-align center
                font-size 0.7em



    div.content
        float left
        width 100%
        ul
            padding 0px
            margin-top 8px
            list-style-type none
            li
                font-size 0.9em
                a
                    display block
                    padding 5px 10px
                    background #e6e6e6
                    color black
                    text-decoration none
                    &:hover
                        background #ccc
                &:nth-child(even)
                    a
                        background white
                        &:hover
                            background #cacaca
        h3
            margin-top 0px
            margin-bottom 4px

        em
            font-size 0.9em
            margin-top -5px
        .interpelace li
            line-height 1.4em
        .vystoupeni
            li
                float left
                background white
                a
                    width 99px
                    padding 7px 0px
                    text-align center
                    float left
        .hlasovani
            margin-top 15px
            float left
            width 100%
            li
                a
                    position relative
                    padding-left 95px
            span.voteLabel
                display block
                position absolute
                top 5px
                left 0px
                width 85px
                > span
                    font-size 0.7em
                    background red
                    border-radius 2px
                    padding 2px 5px
                    display block
                    float right
                &.against span
                    background #E41A1C
                    color white
                &.favor span
                    background #4DAF4A
                &.abstain span
                    background #377EB8
                    color white
                &.no-vote span
                    background #984EA3
                    color white
                &.absent span
                    background #FFFF33
                &.pardoned span
                    background #FF7F00
            ul.legend
                li
                    position relative
                    padding 5px 0px
                    padding-left 95px


    .contentButtons
        position absolute
        bottom 0px
        button
            font-family arial, sans-serif
            font-size 0.8em
            border 0px none
            background #ccc
            padding 8px 0px
            text-align center
            margin 0px
            &.vystoupeni
                background lighten(scaleQualitativeMedium[4], 20%)
                width 87px
                &:hover
                    background darken(@background, 30%)
                    color white
                &:active
                    background darken(@background, 50%)
                    color white
            &.interpelace
                background scaleQualitativeMedium[0]
                margin 0px 20px
                width 85px
                &:hover
                    background darken(@background, 30%)
                    color white
                &:active
                    background darken(@background, 50%)
                    color white
            &.zakony
                background scaleQualitativeMedium[1]
                width 64px
                &:hover
                    background darken(@background, 30%)
                    color white
                &:active
                    background darken(@background, 50%)
                    color white
            &.hlasovani
                background lighten(scaleQualitativeMedium[3], 40%)
                width 77px
                margin-left 20px
                &:hover
                    background darken(@background, 30%)
                    color white
                &:active
                    background darken(@background, 50%)
                    color white

            &:hover
                cursor pointer

