&
    position relative
    padding-left 20px
    img
        float right
    a.backButton
        position absolute
        top 10px
        left @padding-left
        display block
        width 38px
        height 38px
        border 2px solid #1d1d1d
        border-radius 50%
        background white
        &:hover
            background #eee
        img
            position absolute
            top -2px
            left -2px
    h2
    h3.party
        margin-left 60px
    h2
        margin-top 6px
        margin-bottom 0px
    h3.party
        margin-top 0px
        font-size 1em
        font-weight normal
        color #777
        font-style italic
    div.calendar
        width 380px
        height 184px
        position relative
        .month
            position absolute
            width 31px
            height 31px
            > div
                width @width
                height @height
                position absolute
                top 0px
                left 0px
                background red

